{% extends 'layout.njk' %}

{% block content %}

  <div class="card table-container">
    <a href="/members/create">Novo</a>

    <table width="100%">
      <thead>
        <tr>
          <th>Fotinho</th>
          <th>Membro</th>
          <th>Contato</th>
          <th>Visualizar</th>
        </tr>
      </thead>

      <tbody>

        {% for member in members %}
          <tr>
            <td>
              <span style="background:url({{member.avatar_url}});"></span>
            </td>
            <td>{{member.name}}</td>
            <td>{{member.email}}</td>
            <td>
              <a href="/members/{{member.id}}">
                Veja mais sobre o Aluno</a>
            </td>
          </tr>
          {%endfor%}
        </tbody>
      </table>
    </div>

  {% endblock content %}