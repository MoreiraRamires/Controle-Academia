{% extends 'layout.njk' %}

{% block content %}

  <div class="card table-container">

    <a href="/instructors/create">Novo</a>
    <table width="100%">
      <thead>
        <tr>
          <th>Fotinho</th>
          <th>Instructor</th>
          <th>Atendimento</th>
          <th>Visualizar</th>
        </tr>
      </thead>

      <tbody>

        {% for instructor in instructors %}
          <tr>
            <td>
              <span style="background:url({{instructor.avatar_url}});"></span>
            </td>
            <td>{{instructor.name}}</td>
            <td>{{instructor.services}}</td>
            <td>
              <a href="/instructors/{{instructor.id}}">
                Visualize o Instrutor</a>
            </td>
          </tr>
          {%endfor%}
        </tbody>
      </table>
    </div>

  {% endblock content %}